{
  "name": "Custos",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "AI-powered tab management and guardian.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pfp.png",
      "32": "icons/pfp.png",
      "48": "icons/pfp.png",
      "128": "icons/pfp.png"
    }
  },
  "host_permissions": [
    "*://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },    
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "alarms",
    "scripting"
  ]
}